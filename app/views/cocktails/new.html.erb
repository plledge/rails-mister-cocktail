<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <h1>Add your favorite drink</h1>

      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>