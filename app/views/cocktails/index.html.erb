<div class="container mt-2">
  <h1>Mr Cocktail</h1>
  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary" %>
  <br>
  <br>
  <div class="container">
    <div class="row">
      <% @cocktails.each do |lst| %>
        <div class="col-12 col-md-6 col-lg-3">
          <div class="card" >
            <h2><%= link_to "#{lst.name}", cocktail_path(lst) %></h2>
            <%= lst.ingredients%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
